{
    "manifest_version": 3,
    "name": "ChatGPT Query",
    "version": "1.0",
    "description": "Your first message to ChatGPT can be included in a query param.",
    "content_scripts": [
        {
            "matches": [
                "https://chat.openai.com/*"
            ],
            "js": [
                "content.js"
            ]
        }
    ],
    "icons": {
        "16": "images/16.png",
        "32": "images/32.png",
        "96": "images/96.png",
        "192": "images/192.png"
    },
    "host_permissions": [
        "https://chat.openai.com/*"
    ]
}